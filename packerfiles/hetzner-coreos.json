{
  "builders": [
    {
      "type": "hcloud",
      "snapshot_name": "fn61-coreos-{{user `coreos_version`}}-{{isotime \"2006-01-02-03-04\"}}",
      "image": "ubuntu-18.04",
      "location": "{{user `location`}}",
      "server_type": "{{user `server_type`}}",
      "rescue": "linux64",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "ignition.json",
      "destination": "/root/ignition.json"
    },
    {
      "type": "shell",
      "inline": [
        "curl --fail --location -o coreos-install https://raw.githubusercontent.com/coreos/init/master/bin/coreos-install",
        "chmod +x coreos-install",
        "./coreos-install -d /dev/sda -C stable -V {{user `coreos_version`}} -i ignition.json"
      ]
    }
  ]
}
